			<td><input type="text" name="cliente_productor"  value="<%= typeof cliente_productor !== 'undefined' ? cliente_productor : '' %>"/></td>
		</tr>
		<tr>
			<td>Telefono</td>
			<td colspan="3"><input type="text" name="cliente_telefono" value="<%= typeof cliente_telefono !== 'undefined' ? cliente_telefono : '' %>"/></td>
			
			<td>Fecha Siniestro:</td>
			<td><input type="date" name="cliente_fecha_siniestro" value="<%= typeof cliente_fecha_siniestro !== 'undefined' ? cliente_fecha_siniestro : '' %>"/></td>
		</tr>
		<tr>
			<td>Patente:</td>
			<td><input type="text" name="cliente_patente" value="<%= typeof cliente_patente !== 'undefined' ? cliente_patente : '' %>"/></td>
			<td>Marca:</td>
			<td><input type="text" name="cliente_marca" value="<%= typeof cliente_marca !== 'undefined' ? cliente_marca : '' %>"/></td>
