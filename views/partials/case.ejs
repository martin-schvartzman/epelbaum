		<tr>
			<td>Asegurado</td>
			<td colspan="3"><input type="text" name="cliente_asegurado" value="<%= typeof cliente_asegurado !== 'undefined' ? cliente_asegurado : '' %>"/></td>
			
			<td>Franquicia:</td>
			<td><input type="text" name="cliente_franquicia" value="<%= typeof cliente_franquicia !== 'undefined' ? cliente_franquicia : '' %>"/></td>
		</tr>
		<tr>
			<td>Lesiones:</td>
			<td><select name="cliente_lesiones">
                <%= typeof cliente_lesiones !== 'undefined' ? '' : '' %>
