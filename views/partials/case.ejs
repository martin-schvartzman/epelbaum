			<td><input type="text" name="terceros_siniestro"  value="<%= typeof terceros_siniestro!== 'undefined' ? terceros_siniestro : '' %>"/></td>
		</tr>
		<tr>
			<td>Domicilio</td>
			<td colspan="3"><input type="text" name="terceros_domicilio" value="<%= typeof terceros_domicilio !== 'undefined' ? terceros_domicilio : '' %>"/></td>
			
			<td>Telefono:</td>
			<td><input type="text" name="terceros_telefono" value="<%= typeof terceros_telefono !== 'undefined' ? terceros_telefono : '' %>"/></td>
		</tr>
		<tr>
			<td>Dni</td>
			<td colspan="3"><input type="text" name="terceros_dni" value="<%= typeof terceros_dni!== 'undefined' ? terceros_dni : '' %>"/></td>
			
			<td></td>
			<td></td>
		</tr>
		<tr>
			<td>Seguro:</td>
			<td><input type="text" name="terceros_seguro" value="<%= typeof terceros_seguro !== 'undefined' ? terceros_seguro : '' %>"/></td>
			<td>Poliza:</td>
			<td><input type="text" name="terceros_poliza" value="<%= typeof terceros_poliza !== 'undefined' ? terceros_poliza : '' %>"/></td>
			<td>Notificacion</td>
			<td><input type="text" name="terceros_notificacion" value="<%= typeof terceros_notificacion !== 'undefined' ? terceros_notificacion : '' %>"/></td>
		</tr>
		<tr>
			<td>Patente:</td>
			<td><input type="text" name="terceros_patente" value="<%= typeof terceros_patente !== 'undefined' ? terceros_patente : '' %>"/></td>
			<td>Marca:</td>
			<td><input type="text" name="terceros_marca" value="<%= typeof terceros_marca !== 'undefined' ? terceros_marca : '' %>"/></td>
			<td>Cita al 3ro</td>
			<td><select name="terceros_cita">
			<option>SI</option>
			<option>NO</option>
			</select></td>
		</tr>
	</tbody>
</table>

<table style="width:100%;margin-top:10px;">
	<tbody>
		<tr>
			<td>Fecha Audiencia:</td>
			<td><input type="date" name="adicionales_fecha_audiencia" value="<%= typeof adicionales_fecha_audiencia !== 'undefined' ? adicionales_fecha_audiencia : '' %>"/></td>
			<td>Horario:</td>
			<td><input type="text" name="adicionales_horario" value="<%= typeof adicionales_horario !== 'undefined' ? adicionales_horario : '' %>"/></td>
			<td>Se avisa:</td>
			<td><select name="adicionales_se_avisa">
            <%= typeof adicionales_se_avisa !== 'undefined' ? '' : '' %>
			<option>SI</option>
			<option>NO</option>
			</select></td>
		</tr>
		<tr>
			<td colspan="6">
			Observaciones:<br/>
			<textarea name="adicionales_observaciones" style="width:100%;height:100px;"><%= typeof adicionales_observaciones !== 'undefined' ? adicionales_observaciones : '' %></textarea>
			</td>
		</tr>
	</tbody>
</table>
<input type="submit" value="Guardar Ficha" style="margin-bottom:30px;"/>

</div>
</div>
</div>
</form>

<% if(typeof _id !== 'undefined'){ %>

<a href="/delete/<%= _id %>">eliminar ficha</a>

<h3> <a href="/print/caso<%= _id %>">Imprimir ficha</a></h3>
<h3> <a href="/print/caratula/<%= _id %>">Imprimir caratula</a></h3>
<div class="container">
<div class="row-fluid">
<div class="col-sm-10">
<table style="width:100%;">
	<tr>
		<th style="width:30%;">Fecha</th>
		<th style="width:60%;">Comentario</th>
		<th></th>
	</tr>
	<% comments.forEach(comment => { %>
	<tr>
		<td><%= comment.fecha %></td>
		<td><%= comment.texto %></td>
		<td></td>
	</tr>
	<% }); %>
</table>
<form action="/comment/<%= _id %>" method="POST">
	<table style="width:100%;">
	<tr>
		<td style="width:100px;">Fecha<br/><input type="date"  name="fecha" value=""/></td>
		<td colspan="7">Comentario<br/><textarea name="texto" style="width:100%;height:50px;"></textarea></td>
		<td><input type="submit" value="Ingresar"/></td>
	</tr>
	</table>
</form>
</div>
</div>
</div>

<% } %>